<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    >

    <RelativeLayout
        android:paddingVertical="@dimen/playBoxPadding"
        android:paddingHorizontal="@dimen/playBoxPadding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:id="@+id/imgPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/black"
            android:src="@drawable/icon_play"></ImageButton>

        <ImageButton
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:id="@+id/imgPlayList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/black"
            android:src="@drawable/icon_playlist"></ImageButton>


    </RelativeLayout>

</RelativeLayout>